{{>layout/header}}

<head>
    <style>
        h2{
            text-align: center;
        }
        h3{
            position: absolute;
            color: white;
            float: right;
            text-align: right;
            left: 75%;
        }
        h4{
            text-align: center;
        }
        input{
            position: relative;
            left: 20%;
            margin-bottom: 10px;
        }
        #search{
            background: #004dff;
        }
        #top{
            margin-top : 20px;
        }
        .green_box{
            display:inline-block;
            position:static;
            width:180px;
            height:100px;
            margin:50px;
            border:solid 4px;
            border-color:pink;
        }
        .round{
            border:solid 4px;
            border-color:pink;
            border-radius:18px
        }

        input[id="menuicon"] {display:none;}
        input[id="menuicon"] + label {display: block;margin: 30px;width: 30px;height: 30px;position: relative;cursor: pointer;}
        input[id="menuicon"] + label span {display: block;position:absolute;width: 100%;height: 5px;border-radius: 30px;background: #000;transition: all .35s;}
        input[id="menuicon"] + label span:nth-child(1) {top:0;}
        input[id="menuicon"] + label span:nth-child(2) {top:50%;transform: translateY(-50%);}
        input[id="menuicon"] + label span:nth-child(3) {bottom: 0;}
        input[id="menuicon"]:checked + label {z-index:2;}
        input[id="menuicon"]:checked + label span:nth-child(1) {top:50%;transform: translateY(-50%) rotate(45deg);}
        input[id="menuicon"]:checked + label span:nth-child(2) {opacity: 0;}
        input[id="menuicon"]:checked + label span:nth-child(3) {bottom:50%; transform: translateY(50%) rotate(-45deg);}

        div[class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark"] {width: 300px; height: 100%; background: #222222; position: fixed;top:0;left: -300px;z-index: 1;transition: all .35s;}
        input[id="menuicon"]:checked + label + div{left: 0;}

        a[class="logout nav-link active"]{left: 100%;}
    </style>
</head>



