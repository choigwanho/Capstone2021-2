{{>layout/header}}

<h1>기사</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">기사 번호</label>
                <input type="text" class="form-control" id="id" value="{{news.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">기사 제목</label>
                <input type="text" class="form-control" id="title" value="{{news.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="press"> 언론사 </label>
                <input type="text" class="form-control" id="press" value="{{news.press}}" readonly>
            </div>
            <div class="form-group">
                <label for="body"> 기사 본문 </label>
                <textarea class="form-control" id="body" >{{news.body}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">홈으로 가기</a>
    </div>
</div>

{{>layout/footer}}